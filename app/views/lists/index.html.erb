<h1>Lists#index</h1>
<% @lists.each do |list| %>
<ul>
  <li> <%= link_to list.name, list_path(list)  %> /<%= link_to "delete", list_path(list), method: :delete, data: { confirm: 'Are you sure?'}  %>
  </li>
</ul>


<% end %>

