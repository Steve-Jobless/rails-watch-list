<div>
  <div class="banner">
    <div class="container pt-5">
        <div class="text-container">
          <h1>Watchlist</h1>
          <h2> Add you favourite movies</h2>
          <%= link_to "New list", new_list_path,  class:"btn btn-info btn-lg mt-5"%>
        </div>

    </div>
  </div>
</div>

<div class="container">
  <h2 class="mt-2">The lists</h2>
    <% @lists.each do |list| %>
    <div class="d-flex">
    <div>
      <% if list.photo.attached?   %>
        <%= cl_image_tag(list.photo.key,
              width: 200, height: 150, crop: :fill) %>
      <% end %>
</div>
<div>
       <%= link_to list.name, list_path(list)  %>
        <%= link_to "", list_path(list), method: :delete, data: { confirm: 'Are you sure?'}, class:"delete fas fa-backspace"  %>
</div>
      </div>
    <% end %>

  <h2 class="mt-5">Le Wagon Selected</h2>
  <div class="owl-carousel owl-theme mt-5">
    <div class="img-carousel"> <%= image_tag "img1.png" %> </div>
    <div class="img-carousel"> <%= image_tag "img2.png" %> </div>
    <div class="img-carousel"> <%= image_tag "img3.png" %> </div>
    <div class="img-carousel"> <%= image_tag "img4.png" %> </div>
    <div class="img-carousel"> <%= image_tag "img5.png" %> </div>
  </div>
</div>
